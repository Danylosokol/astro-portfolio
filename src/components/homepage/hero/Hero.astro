---
import { HERO } from "@consts";
import { Icon } from "astro-icon/components";
import Container from "@components/Container.astro";
import type { Socials } from "@types";

const socialsKeys = Object.keys(HERO.socials).filter(
  (social) => social !== "email"
) as Array<keyof Socials>;
const socials = HERO.socials;
---

<section class="hero mt-32 md:mt-40 mb-40">
  <Container
    ><h1
      class="text-3xl md:text-6xl font-bold tracking-tight mb-8 lg:leading-[3.7rem] leading-tight lg:min-w-[700px] min-w-full"
    >
      {HERO.title}
    </h1>
    <div
      class="flex flex-col-reverse md:flex-row w-full justify-between gap-x-10"
    >
      <div
        class="max-w-full md:max-w-xl lg:max-w-3xl flex flex-col flex-wrap justify-between"
      >
        <p class="text-secondary-bright leading-relaxed mb-3 md:mb-0">
          {HERO.description}
        </p>
        <span class="flex items-center gap-x-2 mb-3 md:mb-0"
          ><Icon name="mdi:location" />{HERO.location}</span
        >
        <a
          href={HERO.socials.email.href}
          class="flex items-center gap-x-2 hover:text-secondary-bright duration-300 mb-3 md:mb-0"
        >
          <Icon name="mdi:email-outline" />
          {HERO.socials.email.name}</a
        >
        <ul class="flex flex-wrap items-center gap-x-6">
          {
            socialsKeys.map((social) => (
              <li class="social-link opacity-0">
                <a
                  href={socials[social].href}
                  target="_blank"
                  rel="noreferer noopener"
                  class="flex items-center gap-x-3 hover:text-secondary-bright duration-300"
                >
                  {socials[social].name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="flex flex-col items-center mb-6 md:mb-0 md:-mt-20">
        <img
          class="rounded-full mb-4 object-cover w-40 h-40 md:w-56 md:h-56 bg-top border p-1 border-secondary border-dashed"
          src={HERO.image.src}
          alt={HERO.image.alt}
        />
        <a
          href={HERO.cv.href}
          class="flex items-center justify-center border border-secondary duration-500 hover:bg-primary-lighter py-2 px-4 text-center cursor-pointer font-medium gap-x-2 max-w-sm outline-none"
        >
          <Icon name="mdi:file-document-outline" /> Download Resume
        </a>
      </div>
    </div>
  </Container>
</section>

<script src="../../../utils/animateHero.ts"></script>
